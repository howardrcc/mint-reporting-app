{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "DuckDB Dashboard",
  "version": "1.0.0",
  "identifier": "com.duckdb.dashboard",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "DuckDB Dashboard",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "center": true,
        "skipTaskbar": false,
        "titleBarStyle": "Visible"
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: blob:; img-src 'self' data: blob: https:; connect-src 'self' ws: wss: http: https:;"
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "DuckDB Dashboard Team",
    "icon": [],
    "category": "Developer Tool",
    "shortDescription": "High-performance data dashboard with DuckDB",
    "longDescription": "A powerful data analytics dashboard application that leverages DuckDB for high-performance analytics on large datasets. Features interactive visualizations, real-time data processing, and multi-format data ingestion.",
    "copyright": "Copyright Â© 2024 DuckDB Dashboard Team",
    "licenseFile": "../LICENSE"
  }
}