{
  "name": "DuckDB Dashboard Dev Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/rust:1": {
      "version": "1.75",
      "profile": "minimal"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "tauri-apps.tauri-vscode",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next",
        "ms-vscode.vscode-eslint",
        "formulahendry.auto-rename-tag",
        "christian-kohler.path-intellisense",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-vscode-remote.remote-containers"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "rust-analyzer.cargo.features": "all",
        "rust-analyzer.checkOnSave.command": "clippy",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": true
        },
        "typescript.preferences.includePackageJsonAutoImports": "auto",
        "files.associations": {
          "*.rs": "rust"
        }
      }
    }
  },
  "forwardPorts": [3000, 5173, 1420, 8080],
  "postCreateCommand": "npm run install:all && cd backend && cargo build",
  "postStartCommand": "echo 'Development environment ready! Run npm run dev:web or npm run dev:desktop to start.'",
  "remoteUser": "vscode",
  "containerUser": "vscode",
  "updateRemoteUserUID": true,
  "mounts": [
    "source=${localWorkspaceFolder}/.git,target=/workspaces/duckdb-dashboard/.git,type=bind,consistency=cached",
    "source=duckdb-dashboard-node-modules,target=/workspaces/duckdb-dashboard/node_modules,type=volume",
    "source=duckdb-dashboard-target,target=/workspaces/duckdb-dashboard/backend/target,type=volume"
  ]
}